@page
@model ELMS.Web.Areas.Identity.Pages.Account.ChangeUserPasswordModel

<div class="row white-box" >
    <div class="card">
        <div class="card-header"><strong class="h4">Change Password</strong></div>
        
            <div class="card-body">
                <div class="col-md-12">
                    <form id="change-password-form" method="post" class="form-horizontal form-material">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input type="hidden" asp-for="Input.Id" />
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control input-sm" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control input-sm" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary btn-sm">Update password</button>
                    </form>
                </div>
            
               
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
