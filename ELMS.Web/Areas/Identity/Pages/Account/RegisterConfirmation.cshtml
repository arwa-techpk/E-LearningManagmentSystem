@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewData["Title"]</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <partial name="_Styles" />
</head>
<body class="hold-transition login-page" style="background: white!important;">
    <div class="login-box" style="width:600px!important;">
        <div class="login-logo">
            <span>You are <b>Registered</b>!</span>
        </div>
        <!-- /.login-logo -->
        <p class="login-box-msg">with this email (@Model.Email) and your account confirmed.</p>
        <!-- /.login-card-body -->
        <div style="text-align: -webkit-center;">
            <p class="mb-1">
                <a type="button" asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary">Sign In</a>
            </p>
            <br />
        </div>
    </div>
    <partial name="_Scripts" />
</body>
</html>