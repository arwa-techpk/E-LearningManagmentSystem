@model IEnumerable<ELMS.Infrastructure.Models.StudentLecture>

@{
    ViewData["Title"] = "Student Lecture";
}

<div class="card">
    <div class="card-header">
        <div class="col-sm-12">
            <a asp-action="Create" class="btn bg-success float-right">
                <i class="fa fa-plus-square"></i> Mark Student Attendence
            </a>

        </div>
    </div>
    <div id="viewAll" class="card-body table-responsive">

        <table class="table table-hover table-bordered" id="tableStudentLecture">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Student)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Lecture)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Student.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Lecture.Title)
                        </td>
                        <td>
                            
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-xs bg-success" title="Edit"><i class="fas fa-edit"></i></a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-xs bg-info" title="Details"><i class="fas fa-eye"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-xs bg-danger" title="Delete"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts
{
    <script src="~/js/site.js"></script>
    <script>
        $(document).ready(function () {
            $("#tableStudentLecture").DataTable();
        });
    </script>
}