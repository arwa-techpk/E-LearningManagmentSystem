@using ELMS.Web.Areas.Admin.Models
@model UserViewModel
<form id="create-form" method="post" asp-area="Admin" asp-controller="User" asp-action="OnPostCreate" onsubmit="return jQueryModalPost(this);">
    <div class="row">
        <div class="col-md-12">
            @if (User.IsInRole("SuperAdmin"))
            {
                <div class="row">
                    <div class="form-group col-md-12">
                        <label class="control-label">@localizer["School"]</label>
                        <select asp-for="SchoolId" class="form-control input-sm required" asp-items="@Model.Schools" >
                            <option value="">Select School</option>
                        </select>


                        <small><span asp-validation-for="SchoolId" class="text-danger"></span></small>
                    </div>
                </div>
            }
            else
            {
                <input type="hidden" asp-for="SchoolId" />
            }



            <div class="row">
                <div class="form-group  col-md-6">
                    <label class="control-label">@localizer["First Name"]</label>
                   
                        <input type="text" asp-for="FirstName" name="FirstName" class="form-control">
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    
                </div>
                <div class="form-group col-md-6">
                    <label for="LastName" class="control-label">@localizer["Last Name"]</label>
                    
                        <input type="text" asp-for="LastName" name="LastName" id="LastName" class="form-control">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
            

            <div class=" row">
                <div class="form-group col-md-6">
                    <label class="control-label">@localizer["Gender"]</label>
                    <select asp-for="Gender" class="form-control form-control-user">
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                    @*<input asp-for="Gender" type="text" class="form-control form-control-user" id="exampleFirstName" placeholder="@localizer["Gender"]">*@
                    <small><span asp-validation-for="Gender" class="text-danger"></span></small>
                </div>
                <div class="form-group col-sm-6">
                    <label class="control-label">@localizer["Date Of Birth"]</label>
                    <input asp-for="DateOfBirth" type="date" class="form-control form-control-user" id="exampleLastName" placeholder="@localizer["Date of Birth"]">
                    <small><span asp-validation-for="DateOfBirth" class="text-danger"></span></small>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-6">
                    <label class="control-label">@localizer["Email"]</label>

                    <input type="email" asp-for="Email" name="Email" class="form-control">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-6">
                    <label class="control-label">@localizer["ContactNumber"]</label>
                    <input asp-for="ContactNumber" type="text" class="form-control form-control-user" id="exampleLastName" placeholder="@localizer["Contact Number"]">
                    <small><span asp-validation-for="ContactNumber" class="text-danger"></span></small>
                </div>
                
            </div>
            
            <div class="row">
                <div class="form-group col-md-6">
                    <label class="control-label">@localizer["Password"]</label>

                    <input type="password" asp-for="Password" name="Password" class="form-control">
                    <span asp-validation-for="Password" class="text-danger"></span>

                </div>
                <div class="form-group col-md-6">
                    <label class="control-label">@localizer["Confirm Password"]</label>

                    <input type="password" asp-for="ConfirmPassword" name="ConfirmPassword" class="form-control">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

            </div>

            <div class="form-group justify-content-between" style="margin-bottom: 0px !important">
                <button type="submit" class="btn btn-success">Save</button>
                <button type="submit" class="btn btn-default close-button" data-dismiss="modal">Cancel</button>
            </div>
            </div>
        </div>
</form>
<script type="text/javascript" language=javascript>
    $.validator.unobtrusive.parse(document);
</script>