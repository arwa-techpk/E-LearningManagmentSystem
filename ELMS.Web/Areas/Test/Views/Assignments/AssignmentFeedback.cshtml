@model ELMS.Infrastructure.Models.StudentAssignment

@{
    ViewData["Title"] = "";
}


<div class="card" style="">
    <div class="card-header">
        <div class="col-sm-12">
            <label class="card-title">Assignment Feedback</label>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <form asp-action="AssignmentFeedback">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="StudentId" />
                <input type="hidden" asp-for="SubmissionDate" />
                <input type="hidden" asp-for="AssignmentDetails" />
                <input type="hidden" asp-for="AssignmentId" />

                <div class="form-group">
                    <label asp-for="ObtainScore" class="control-label"></label>
                    <input asp-for="ObtainScore" class="form-control" />
                    <span asp-validation-for="ObtainScore" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>


    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
