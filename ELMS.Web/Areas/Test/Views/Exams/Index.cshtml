@model IEnumerable<ELMS.Infrastructure.Models.Exam>

@{
    ViewData["Title"] = "";
}

<div class="card">
    <div class="card-header">
        <div class="col-sm-12">
            <label class="card-title">Exam</label>
            <a asp-action="Create" class="btn bg-success btn-sm float-right">
                <i class="fa fa-plus-square"></i> Create
            </a>

        </div>
    </div>
    <div id="viewAll" class="card-body table-responsive">

        <table class="table table-hover table-bordered" id="tableExam">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Duration)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ExamDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TotalScore)
                    </th>
                  
                    <th>
                        @Html.DisplayNameFor(model => model.Course)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Duration)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ExamDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalScore)
                        </td>
                       
                        <td>
                            @Html.DisplayFor(modelItem => item.Course.Title)
                        </td>
                        <td>
                            @{ 
                                if (!string.IsNullOrEmpty(item.ExamPaper))
                                {
                                    <a asp-action="DownloadExam" asp-route-id="@item.ExamPaper" class="btn btn-xs bg-info" title="Download Exam"><i class="fas fa-download"></i></a>
                                }
                            }
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-xs bg-success" title="Edit"><i class="fas fa-edit"></i></a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-xs bg-info" title="Details"><i class="fas fa-eye"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-xs bg-danger" title="Delete"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts
{
    <script src="~/js/site.js"></script>
    <script>
        $(document).ready(function () {
            $("#tableExam").DataTable();
        });
    </script>
}